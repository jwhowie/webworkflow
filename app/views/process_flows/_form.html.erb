<div class="form-container">


<%= form_for(process_flow) do |f| %>
  <% if process_flow.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(process_flow.errors.count, "error") %> prohibited this process_flow from being saved:</h2>

      <ul>
      <% process_flow.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="form-group col-lg-3">
      <%= f.label :step_number %>
      <%= f.number_field :step_number, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-lg-3">
      <%= f.label :step_name %>
      <%= f.text_field :step_name, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-lg-3">
      <%= f.label :team %>
      <%= f.text_field :team, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
