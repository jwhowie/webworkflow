<p id="notice"><%= notice %></p>

<h3>Work Items</h3>
<div>

  <div id='work-area'>
    <div id='comments-customer'>


    <div id='comments'>
      <h4>Comment:</h4>
      <button id='queue-back' class='queue-button btn btn-primary'>Back</button>
      <button id='queue-escalate' class='queue-button btn btn-primary'>Escalate</button>
      <button id='queue-forward' class='queue-button btn btn-primary'>Forward</button>
      <button id='queue-save' class='queue-button btn btn-primary'>Save</button>
      <textarea rows="10" cols="50" id='queue-comment'></textarea>

    </div>
    <div id='customer-info-block'>
      <h4>Customer:</h3>
      <div id='customer-info'>
      </div>
    </div>
    </div>
    <div id='queue-table' class='scrollqueue'>



      <table id='queue_table'>
      <thead>
        <tr>
          <th>Date in Queue</th>
          <th>Created</th>
          <th>Team</th>
          <th>Action</th>
          <th>Customer</th>
          <th>Assigned</th>
        </tr>
      </thead>



      <tbody id='queue-body' >

      </tbody>

    </table>
    </div>
    <div>
      <div>
        <h4>History:</h4>
      </div>
      <textarea rows="6" cols="50" id='queue-history' readonly> </textarea>
    </div>
</div>



