   <div class="modal-dialog">
     <div class="modal-content">
       <div class="modal-header">

         <button type="button" class="close" data-dismiss="modal">&times;</button>
         <h4 class="modal-title">New Customer</h4>
       </div>
       <div class="modal-body">

<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%=pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">

     <div class="">
         <%= f.label :name %>
     </div>
     <div class="">
        <%= f.text_field :first_name,placeholder: "First Name" %>
          <%= f.text_field :last_name, placeholder: "Last Name" %>
     </div>
  </div>

  <div class="field">
    <div class="">
      <%= f.label :address %>
     </div>
     <div class="">
      <%= f.text_field :address_1, placeholder:"Street Address" %>
    </div>
    <div class="">
      <%= f.text_field :address_2, placeholder: "Street Address Line 2"%>
    </div>

  </div>

  <div class="field">
      <div class="">
        <%= f.label :city %>
      </div>
      <div class="">
        <%= f.text_field :city %>
      </div>
  </div>

  <div class="field">
      <div class="">
        <%= f.label :email %>
      </div>
      <div class="">
        <%= f.email_field :email %>
      </div>
  </div>

  <div class="field">
      <div class="">
          <%= f.label :phone %>
      </div>
      <div class="">
         <%= f.telephone_field :phone %>
      </div>
  </div>


  <div class="actions">
    <!-- <#%= f.submit class: "btn btn-default" %>  -->
  </div>
  <div class="modal-footer">
    <button id='save-customer' class="btn btn-default" data-dismiss="modal">Save</button>
  </div>
<% end %>


       </div>

     </div>

   </div>
